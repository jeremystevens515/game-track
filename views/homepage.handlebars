<main>

{{#each gamesData}}
<div class="card lg:card-side  shadow-xl">
  <figure><img src="https://images.igdb.com/igdb/image/upload/t_cover_big/{{this.dataValues.cover}}.jpg" alt="Album"/></figure>
  <div class="card-body">
    <h2 class="card-title text-3xl">{{this.dataValues.name}}</h2>
    <p class="text-xl">Genres:{{this.dataValues.genres}}</p>
    <div class="card-actions justify-end">
      <a class="btn btn-accent" href="/{{this.dataValues.id}}">Open</a>
    </div>
  </div>
</div>
<br>
{{/each}}
</main>

